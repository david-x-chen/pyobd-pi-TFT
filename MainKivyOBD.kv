<AnimWidget@Widget>:
    canvas:
        Color:
            rgba: 0.7, 0.3, 0.9, 1
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint: None, None
    size: 400, 30


<OBDWidget>:
    cols: 1

    canvas:
        Color:
            rgba: 0.9, 0.9, 0.9, 1
        Rectangle:
            pos: self.pos
            size: self.size

    anim_box: anim_box
    lab_rpm_name: lab_rpm_name
    lab_rpm_value: lab_rpm_value
    lab_speed_name: lab_speed_name
    lab_speed_value: lab_speed_value
    status_lbl: status_lbl

    Label:
        id: lab_speed_name
        font_size: 30
        color: 0.6, 0.6, 0.6, 1
        text_size: self.width, None
        halign: 'center'

    Label:
        id: lab_speed_value
        font_size: 100
        color: 0, 0, 0.8, 1
        text: '3'

    Label:
        id: lab_rpm_name
        font_size: 30
        color: 0.6, 0.6, 0.6, 1
        text_size: self.width, None
        halign: 'center'

    AnchorLayout:
        id: anim_box

    Label:
        id: lab_rpm_value
        font_size: 50
        color: 0.8, 0, 0, 1
        text: '3'

    Label:
        id: status_lbl
        #font_size: 100
        color: 0.8, 0, 0, 1
        text: "Connecting..."
